<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/ImageView_BankIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/cd_icon_bank"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/TextView_Brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_size_xxl"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_size_normal" />

    <TextView
        android:id="@+id/TextView_NoDetailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tEmptyDetail"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_size_normal" />

</LinearLayout>